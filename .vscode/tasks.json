{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang.exe",
            "args": [
                "-std=c11",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-g",
                "main.c", // main ligger i roden
                "src/knights_tour.c", // implementation ligger i src/
                "-I",
                "include", // header ligger i include/
                "-o",
                "main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": ".\\main.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ]
        }
    ]
}